{% assign section_settings = section.settings %}
<style>
  .product-section {
    margin-top: var(--section-spacing, 20px);
    margin-bottom: var(--section-spacing, 20px);
  }
  .product-section {
    --section-spacing: {{ section_settings.spacing | default: 20 }}px;
  }
</style>
{% assign previous_section_background = content_for_layout %}
{% if previous_section_background == section_settings.background %}
  <style>
    .product-section {
      margin-top: 0;
    }
  </style>
{% endif %}
